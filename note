#!/bin/sh
cd ~/Documents/notas

case "$1" in
	"-l") for f in *; do
			echo $f
		done
		exit 0;;

	"-o")$EDITOR "$2"; exit 0;;
	"-r")rm "$2"; exit 0;;
esac

nombre="$1"\ 
fecha=$(date +"%y-%m-%d")

if [ $1 = "-p" ]; then
	nombre="$2 "
	fecha=""
fi

test "$1" = "" && titulo=$fecha || titulo="$nombre"$fecha

$EDITOR "$titulo"
