#!/bin/bash
test -d ~/Documents/notas || mkdir ~/Documents/notas
cd ~/Documents/notas

nombre="$1"\ 
fecha=$(date +"%y-%m-%d")

case "$1" in
	"-l") 
		for f in *; do
			echo $f
		done
		exit 0;;

	"-o")
		# TODO: una forma de buscar
		n=0
		lista=()
		for f in *; do
			echo $n") "$f
			n=$(( $n + 1 ))
			lista+=("${f}")
		done
		read i
		toOpen="${lista[$i]}"
		$EDITOR "$toOpen"
		exit 0;;

	"-r")rm "$2"; exit 0;;
	"-p")nombre="$2"; fecha="";;
esac

test "$1" = "" && titulo=$fecha || titulo="$nombre"$fecha

$EDITOR "$titulo"
